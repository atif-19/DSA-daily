#include <iostream>
#include <vector>
using namespace std;

/*
    Heapify function ensures that the subtree rooted at 'index'
    follows the Max Heap property.

    Parameters:
    arr   -> input array representing the heap
    index -> root index of the current subtree
    size  -> number of elements considered as heap
    
    Time Complexity: O(log n)
*/
void Heapify(vector<int>& arr, int index, int size) {
    int largest = index;
    int left = 2 * index + 1;
    int right = 2 * index + 2;

    // Check if left child exists and is greater than current node
    if (left < size && arr[left] > arr[largest])
        largest = left;

    // Check if right child exists and is greater than current node
    if (right < size && arr[right] > arr[largest])
        largest = right;

    // If largest is not root, swap and continue heapifying
    if (index != largest) {
        swap(arr[index], arr[largest]);
        Heapify(arr, largest, size);
    }
}

/*
    Builds a Max Heap from an unordered array using
    bottom-up heap construction.

    Time Complexity: O(n)
*/
void BuildMaxHeap(vector<int>& arr) {
    int lastIndex = arr.size() - 1;

    // Start from last non-leaf node and heapify each node
    for (int i = lastIndex / 2 - 1; i >= 0; i--) {
        Heapify(arr, i, arr.size());
    }
}

/*
    Heap Sort Algorithm:
    1. Build a Max Heap
    2. Swap the root with the last element
    3. Reduce heap size
    4. Heapify the root
    5. Repeat until sorted

    Time Complexity: O(n log n)
    Space Complexity: O(1)
*/
void HeapSort(vector<int>& arr) {
    BuildMaxHeap(arr);
    int size = arr.size();

    while (size > 1) {
        // Move current max to the end
        swap(arr[0], arr[size - 1]);

        // Reduce heap size
        size--;

        // Restore heap property
        Heapify(arr, 0, size);
    }
}

int main() {
    vector<int> arr = {1, 3, 2, 5, 4, 6, 100};

    HeapSort(arr);

    for (int i = 0; i < arr.size(); i++) {
        cout << arr[i] << " ";
    }

    return 0;
}
