class Solution {
public:
    int wateringPlants(vector<int>& plants, int capacity) {
        int steps = 0;
        int can = capacity;

        for (int i = 0; i < plants.size(); i++) {
            if (plants[i] > can) { // need to refill
                steps += i * 2; // go back and return
                can = capacity;
            }
            can -= plants[i]; // water the current plant
            steps++; // move to this plant
        }
        return steps;
    }
};
